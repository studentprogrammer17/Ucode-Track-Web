html
  head
    title= title
    style(type="text/css").
        .btn-link {
            border: none;
            outline: none;
            background: none;
            cursor: pointer;
            color: #0000EE;
            padding: 0;
            text-decoration: underline;
            font-family: inherit;
            font-size: inherit;
        }
        .none {visibility: hidden;}
  body
    <h1>NotePad mini</h1>
    <form method = "post" action = "/">
        <input id = "fileName" name = "fileName" type = "text" placeholder="Name of file" autofocus>
        <br>
        <select id="importance" name = "importance">
            <option value="low">low</option>
            <option value="medium">medium</option>
            <option value="high">high</option>
        </select>
        <br>
        <textarea id = "noteText" name = "noteText" placeholder="type text for note...." rows = "5" cols = "20" max="500"></textarea>
        <br>
        <input  type = "submit" id = "submit" value = "Create">
    </form>
    h1= "List of Notes"
    button(type="button" onclick="changeCss()" id="getTofile" name="getTofile" class="btn-link")=timeAndFilename
    <a href="delete.com">  DELETE</a>
    <div>
        h1= "Detail of " + fileName
        ul
            each val in ["date: " + time,"name: " + fileName,"importance: " + importance,"text: " + noteText]
                li= val
    </div>
